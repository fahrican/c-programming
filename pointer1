#include<stdio.h>
#include<stdlib.h>
#define PI 3.141592f

void kreisflaeche(float *wert){

    *wert = ((*wert) * (*wert) * PI);
}

int main(void){

    float radius;

    printf("Berechnung einer Kreisflaeche. \n \n");
    printf("Geben Sie nun den Radius ein: ");
    scanf("%f", &radius);

    kreisflaeche(&radius);
    printf("Die Kreisflaeche betraegt: %f \n", radius);

 return 0;
}
